<UserControl x:Class="MsOSProgram.ui.components.Common.PlaygroundGraphPart"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MsOSProgram.ui.components.Common"
             mc:Ignorable="d" 
             d:DesignHeight="55" d:DesignWidth="800">
    <Grid Margin="0,20,0,0">
        <Grid x:Name="GridGrapWidth" Height="40" Width="100" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,0,0,15">
            <Grid.Background>
                <LinearGradientBrush EndPoint="1,0.5" StartPoint="0,0.5">
                    <GradientStop Color="Black" Offset="0"/>
                    <GradientStop Color="#FFC39E9E" Offset="1"/>
                </LinearGradientBrush>
            </Grid.Background>
        </Grid>
        <TextBlock x:Name="GridGrapWidthName" HorizontalAlignment="Right" Margin="0,40,0,0" Text="1" TextWrapping="Wrap" VerticalAlignment="Top" Width="25" Foreground="White" TextAlignment="Right"/>
        
    </Grid>
</UserControl>
